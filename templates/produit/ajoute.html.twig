{% extends 'base.html.twig' %}

{% block title %}Ajout d'un produit{% endblock %}

{% form_theme formProduit 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
        <h1>Liste des produits</h1>
    </div>

    {{ form_start(formProduit) }}

    {{ form_row(formProduit.nom, {'attr': {'placeholder': "Designation du produit"}}) }}
    {{ form_row(formProduit.prix, {'attr': {'placeholder': "Prix du produit"}, 
                                    'label': "Prix de vente" } ) }}
    {{ form_row(formProduit.remarques, {'attr': {'placeholder': "Remarques facultatives"}}) }}
    {{ form_row(formProduit.categorieProduit) }}

    <button type="submit" class="btn btn-success">
        {% if editMode %}
            Enregistrer
        {% else %}
            Ajouter le produit
        {% endif %}
    </button> 

    {{ form_end(formProduit) }}
{% endblock %}