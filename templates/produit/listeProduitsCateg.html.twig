{% extends 'base.html.twig' %}

{% block title %}Liste Produits{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{% include "/categorie_produit/listeCateg.html.twig" %}

<div class="example-wrapper">
    <h1>Liste des produits</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Identifiant du produit</th>
                <th>Nom du produit</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in laCateg.produits %}
            <tr>
                <td>produit n° {{ produit.id}} </td>
                <td>{{ produit.nom }} </td> 
                <td>
                    <a href = "{{ path ('caracProduit', {'id': produit.id}) }}"><i class="fas fa-info" title="Voir toutes les caractéristiques"></i> </a> 
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}