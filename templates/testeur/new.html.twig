{% extends 'base.html.twig' %}

{% block title %}Nouveau Testeur{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

    <br>
    <h1>Créer un nouveau Testeur</h1>

    {{ form_start(form) }}

    {{ form_row(form.nom, {'attr': {'placeholder': "Nom du testeur"}}) }}
    {{ form_row(form.prenom, {'attr': {'placeholder': "Prénom du testeur"}}) }}
    {{ form_row(form.mail, {'attr': {'placeholder': "Adresse mail du testeur"}}) }}
    {{ form_row(form.maladie, {'label':"Maladie"}) }}
    {{ form_row(form.testsClinique, {'label': "Clinique"}) }} 
    
    <button type="submit" class="btn btn-success">Créer !</button>
    
    {{ form_end(form) }}

    <br>
    <a href="{{ path('testeur_index') }}"><i class="fas fa-arrow-left"> Retour à la liste des testeurs</i></a><br><br>
{% endblock %}
